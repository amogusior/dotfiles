# - - - - - - - - - - - - - -
#         C U S T O M
# - - - - - - - - - - - - - -

# T E R M I N A L
super + t
	      kitty

# D M E N U
alt + space
        rofi -show drun

# F I L E S
super + f
	      thunar

# B R O W S E R
super + w
	      librewolf


# B R A V E
# super + y
        # firefox

# D I S C O R D
super + d
        discord

# F L A M E S H O T
super + shift + s
        flameshot gui

# L O C K 
super + l
        betterlockscreen -l

# S P O T I F Y
# super + s
#         spotify

# - - - - - - - - - - - - - -
#      R E L O A D I N G
# - - - - - - - - - - - - - -

# S X H K D  R E L O A D
super + Escape
	pkill -USR1 -x sxhkd

# B S P W M  R E L O A D
super + b
	bspc quit

# - - - - - - - - - - - - - -
#        W I N D O W S
# - - - - - - - - - - - - - -

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -50 0,bottom 0 50,top 0 -50,right 50 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# C L O S E  W I N D O W
alt + q
	bspc node -c

# M O V E  W I N D O W
alt + shift + {Left,Right}
	id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# R O T A T E  W I N D O W
F1
	bspc node @/ -R 90

# C I R C U L A T E  W I N D O W
F2
	bspc node @/ -C forward

# F L I P  H O R I Z O N T A L
F3
	bspc node @/ -F horizontal

# F L I P  V E R T I C A L
F4
	bspc node @/ -F vertical

# T I T L E D / M O N O C L E
F5
	bspc desktop -l next

# B A L A N C E  W I N D O W S
F6
	bspc node @/ -B

# C H A N G E  G A P
{F7,F8}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# C H A N G E  S T A T E
{F9,F10,F11,F12}
	bspc node -t {floating,tiled,pseudo_tiled,fullscreen}

# - - - - - - - - - - - - - - - - -
#   C H A N G E  D E S K T O P S
# - - - - - - - - - - - - - - - - -

# focus the next/previous desktop
alt + {Left,Right}
	bspc desktop -f {prev,next}

# next desktop (using alt + tab)
alt + Tab
       rofi -show window

#
# volume control
#

# lower volume
XF86AudioLowerVolume
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5%
# raise volume
XF86AudioRaiseVolume
	pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5%
# mute/unmute audio
XF86AudioMute
	pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle

# brightness up
XF86MonBrightnessUp
  brightnessctl s 10%+

# brightness down
XF86MonBrightnessDown
  brightnessctl s 10%-

# search
XF86Search
  rofi -show drun

# wlan
XF86WLAN
  rfkill toggle wlan && notify-send "wlan restarted"

